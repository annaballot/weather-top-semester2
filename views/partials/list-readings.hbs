<div class="content box">
  <table class="table is-fullwidth is-bordered">
    <thead>
      <tr>
        <th>Submitted On</th>
        <th>Code</th>
        <th>Temp</th>
        <th>Wind Speed</th>
        <th>Wind Direction</th>
        <th>Pressure</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      {{#each station.readings}}
        <tr>
          <td>{{ submittedDate }}</td>
          <td>{{ code }}</td>
          <td>{{ temperature }}</td>
          <td>{{ windSpeed }}</td>
          <td>{{ windDirection }}</td>
          <td>{{ pressure }}</td>
          <td>
            <a
              href="/station/{{../station._id}}/deletereading/{{_id}}"
              class="button">
                {{>icons/delete}}
            </a>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>;
