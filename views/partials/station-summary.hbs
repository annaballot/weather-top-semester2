<div class="content box">
  <div class="columns is-multiline">
  <div class="column is-one-fifth">
    <div class="box has-background-black has-text-white">
      <h2 class="title has-text-white">{{title}}</h2>
      <br>
      Lat: {{latitude}}
      <br>
      Lng: {{longitude}}
    </div>
  </div>
  <div class="column is-one-fifth">
    <div class="box has-background-black has-text-white">
      <h2 class="title has-text-white">Weather</h2>
      <br>
      {{latestWeatherDescription}}
      <br>
      <br>
      <br>
      <br>
      <br>
    </div>
  </div>
  <div class="column is-one-fifth">
    <div class="box has-background-black has-text-white">
      <h2 class="title has-text-white">Temp</h2>
      <br>
      {{latestTempC}} C
      <br>
      {{latestTempF}} F
      <br>
      <br>
      <br>
      Max: {{maxTemperature}}
      <br>
      Min: {{minTemperature}}
      <br>
      <br>
      <br>
    </div>
  </div>
  <div class="column is-one-fifth">
    <div class="box has-background-black has-text-white">
      <h2 class="title has-text-white">Wind</h2>
      {{latestBFT}} BFT
      <br>
      {{latestCompassDirection}}
      <br>
      Feels Like
      <br>
      {{latestWindChill}}
      <br>
      Max: {{maxWindSpeed}}
      <br>
      Min: {{minWindSpeed}}
    </div>
  </div>
  <div class="column is-one-fifth">
    <div class="box has-background-black has-text-white">
      <h2 class="title has-text-white">Pressure</h2>
      {{latestPressure}} hpa
      <br>
      Max: {{maxPressure}}
      <br>
      Min: {{minPressure}}
      <br>
      pressureTrend: {{pressureTrend}}
      <br>
      <br>
      <br>
    </div>
  </div>
</div>
</div>
