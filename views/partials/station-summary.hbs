

<div class="content box">
  <div class="columns is-multiline">
  <div class="column is-one-fifth">
    <div class="box has-background-black has-text-white is-size-7 p-4">
            <div class="columns">
        <div class="column is-three-quarters">
      <h2 class="title has-text-white">{{title}}</h2>
                <br>
      Lat: {{latitude}}
      <br>
      Lng: {{longitude}}
          <br>
          <br>
          <br>
          <br>
          </div>
        <div class="column is-one-quarter">
          {{> icons/location}}
        </div>
      </div>

    </div>
  </div>
  <div class="column is-one-fifth">
    <div class="box has-background-black has-text-white is-size-7 p-4">
            <div class="columns">
        <div class="column is-three-quarters">
      <h2 class="title has-text-white">Weather</h2>
                <br>
      {{latestWeatherDescription}}
      <br>
          <br>
          <br>
          <br>
          <br>
          </div>
        <div class="column is-one-quarter">
          {{> icons/weather}}
        </div>
      </div>


    </div>
  </div>
  <div class="column is-one-fifth">
    <div class="box has-background-black has-text-white is-size-7 p-4">
            <div class="columns">
        <div class="column is-three-quarters">
      <h2 class="title has-text-white">Temp</h2>
                <br>
      {{latestTempC}} C
      <br>
      {{latestTempF}} F
      <br>
      Max: {{maxTemperature}}
      <br>
      Min: {{minTemperature}}
          <br>
          <br>

          </div>
        <div class="column is-one-quarter">
          {{> icons/temperature}}
          <br>
          <br>
          {{#if (eq temperatureTrend 1)}}
          {{> icons/trendUp}}
          {{else if (eq temperatureTrend -1)}}
          {{> icons/trendDown}}
          {{else if (eq temperatureTrend 0)}}
          {{> icons/trendStatic}} 
          {{/if}}
        </div>
      </div>

    </div>
  </div>
  <div class="column is-one-fifth">
    <div class="box has-background-black has-text-white is-size-7 p-4">
            <div class="columns">
        <div class="column is-three-quarters">
      <h2 class="title has-text-white">Wind</h2>
                {{latestBFT}} BFT
      <br>
      {{latestCompassDirection}}
      <br>
      Feels Like
      <br>
      {{latestWindChill}}
      <br>
      Max: {{maxWindSpeed}}
      <br>
      Min: {{minWindSpeed}}
          </div>
        <div class="column is-one-quarter">
          {{> icons/wind}}
          <br>
          <br>
          {{#if (eq windSpeedTrend 1)}}
          {{> icons/trendUp}}
          {{else if (eq windSpeedTrend -1)}}
          {{> icons/trendDown}}
          {{else if (eq windSpeedTrend 0)}}
          {{> icons/trendStatic}} 
          {{/if}}
        </div>
      </div>

    </div>
  </div>
  <div class="column is-one-fifth">
    <div class="box has-background-black has-text-white is-size-7 p-4">
      <div class="columns">
        <div class="column is-three-quarters">
          <h2 class="title has-text-white">Pressure</h2>
        
              {{latestPressure}} hpa
      <br>
      Max: {{maxPressure}}
      <br>
      Min: {{minPressure}}
      <br>
          <br>
          <br>
          <br>
          </div>
        <div class="column is-one-quarter pl-0">
          {{> icons/pressure}}
          <br>
          <br>
          {{#if (eq pressureTrend 1)}}
          {{> icons/trendUp}}
          {{else if (eq pressureTrend -1)}}
          {{> icons/trendDown}}
          {{else if (eq pressureTrend 0)}}
          {{> icons/trendStatic}} 
          {{/if}}
        </div>
      </div>
    </div>
  </div>
</div>
</div>


