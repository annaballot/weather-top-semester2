<div class="box" id="chart"></div>

<script>
  const data = {
    labels: [
      {{#each apiTrendLabels}}
        "{{this}}",
      {{/each}}
    ],
    datasets: [
      {
        name: "Temperature", type: "line",
        values: [
          {{#each apiTempTrend}}
            {{this}},
          {{/each}}
        ]
      }
    ]
  }

  const chart = new frappe.Chart("#chart", {
    title: "Temperature Forecast Trend",
    data: data,
    type: 'line',
    height: 250,
  })
</script>

